<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:key="notifications"
            app:title="Enable message notifications"/>

        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:key="toast"
            app:title="Enable toast messages"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="audio_category"
        app:title="Audio">
        <EditTextPreference
            android:defaultValue="Hello!"
            app:key="audio2"
            app:useSimpleSummaryProvider="true"
            app:title="Customize text for audio button 1"
            />
        <EditTextPreference
            android:defaultValue="What are you doing?"
            app:key="audio3"
            app:useSimpleSummaryProvider="true"
            app:title="Customize text for audio button 2"
            />
        <EditTextPreference
            android:defaultValue="Bye!"
            app:key="audio4"
            app:useSimpleSummaryProvider="true"
            app:title="Customize text for audio button 3"
            />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="privacy_category"
        app:title="Privacy">

        <Preference
            app:key="clear_registration"
            app:summary=""
            app:title="Delete all registered devices"/>

    </PreferenceCategory>


    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>